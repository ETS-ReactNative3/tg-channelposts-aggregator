# https://docs.drone.io/runner/docker/installation/linux/
DRONE_DEBUG=true
DRONE_RPC_HOST=IP:8090
DRONE_RPC_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# looks like: 9c3921e3e748aff725d2e16ef31fbc42
# use: openssl rand -base64 32 or openssl rand -hex 32

# DRONE_SERVER_PORT=8090
# DRONE_RPC_SERVER=http://IP:PORT

DRONE_RUNNER_CAPACITY=1
DRONE_RUNNER_NETWORKS=drone_ci

# Logs
DRONE_LOGS_PRETTY=true
DRONE_LOGS_COLOR=true
DRONE_LOGS_DEBUG=true
DRONE_LOGS_TRACE=false

# dump the http req and response to log. Enable to debug connectivity issues with server.
DRONE_RPC_DUMP_HTTP=true
# dump the http req and response body to log. Enable to debug connectivity issues with server.
DRONE_RPC_DUMP_HTTP_BODY=true