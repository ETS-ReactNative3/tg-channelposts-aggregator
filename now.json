{
  "name": "tg-aggregator",
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-atlas-uri",
    "NODE_ENV": "production",
    "PUBLIC_URL": "./",
    "DB_HOST": "@dbhost",
    "DB_USER": "@dbuser",
    "DB_PASSWORD": "@dbpass",
    "DB_NAME": "@dbname"
  },
  "builds": [
    {
      "src": "client/build/**",
      "use": "@now/static",
      "config": {
        "includeFiles": ["client/build/**"],
        "distDir": "client/build/",
        "maxLambdaSize": "128mb",
        "bundle": false
      }
    },
    {
      "src": "server/**",
      "use": "@now/node",
      "config": {
        "includeFiles": ["server/*/**"],
        "maxLambdaSize": "256mb",
        "bundle": false
      }
    }
  ],
  "routes": [
    {
      "src": "/api/v1/(.*)",
      "dest": "server/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    },
    {
      "src": "/(.*)",
      "dest": "client/build/**",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    }
  ]
}
