{
  "name": "tg-aggregator",
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-atlas-uri"
  },
  "builds": [
    {
      "src": "client/build/*.html",
      "use": "@now/static",
      "config": {
        "includeFiles": ["build/**", "build/static/**"],
        "config": {
          "distDir": "client/build"
        }
      }
    },
    {
      "src": "server/server.js",
      "use": "@now/node",
      "config": {
        "includeFiles": ["api/*/**", "bot/*/**"]
      }
    }
  ],
  "routes": [{ "src": "/(.*)", "dest": "server.js" }]
}
