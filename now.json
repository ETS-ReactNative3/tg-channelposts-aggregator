{
  "name": "tg-aggregator",
  "version": 2,
  "env": {
    "MONGODB_URI": "@mongodb-atlas-uri",
    "NODE_ENV": "production",
    "PUBLIC_URL": "./",
    "DB_HOST": "@dbhost",
    "DB_USER": "@dbuser",
    "DB_PASSWORD": "@dbpass",
    "DB_NAME": "@dbname"
  },
  "builds": [
    {
      "src": "client/build/*.html",
      "use": "@now/static",
      "config": {
        "includeFiles": ["build/**", "build/static/**"],
        "config": {
          "distDir": "client/build"
        }
      }
    },
    {
      "src": "server/server.js",
      "use": "@now/node",
      "config": {
        "includeFiles": ["api/**", "bot/**", "api/*/**", "bot/*/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/v1/(.*)",
      "dest": "server/server.js",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    }
  ]
}
